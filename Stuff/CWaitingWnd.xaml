<Window x:Class="DBManager.Stuff.CWaitingWnd"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    SizeToContent="WidthAndHeight"
    ResizeMode="NoResize"
    WindowStyle="ToolWindow"
    WindowStartupLocation="CenterScreen"
    ShowActivated="False"
    ShowInTaskbar="False">
    
    <StackPanel Orientation="Vertical">
        <ProgressBar Margin="10,10,10,10" Height="25" IsIndeterminate="True" />
        <TextBlock Name="txtblkPrompt" Margin="10,0,10,0" Padding="5" HorizontalAlignment="Center" TextAlignment="Center" />
        <Label Name="lblPleaseWait" Margin="10,0,10,0" HorizontalAlignment="Center" HorizontalContentAlignment="Center" />
    </StackPanel>
</Window>
